extends layout2

block content
  .container.d-flex.justify-content-center.align-items-center.min-vh-100
    .row.justify-content-center
      .col-md-6
        .add-book-form.p-4
          h2.text-center.mb-4 Add Sale
          form#add-book-form(action=`/addSale/${produce._id}` method='POST' name='addSale')
            .mb-3
              label.form-label(for='produceName') Produce Name
              select#produceName.form-control(name='produceName')
                option(value=produce._id) #{produce.produceName}
              small#produceNameErr.form-text.text-danger
            .mb-3
              label.form-label(for='saleTonnage') Tonnage (Kgs)
              input#saleTonnage.form-control(type='number' name='saleTonnage')
              small#saleTonnageErr.form-text.text-danger
            .mb-3
              label.form-label(for='amount') Amount Paid (UGX)
              input#amount.form-control(type='number' name='amount')
              small#amountErr.form-text.text-danger
            .mb-3
              label.form-label(for='buyerName') Buyer's Name
              input#buyerName.form-control(type='text' name='buyerName')
              small#buyerNameErr.form-text.text-danger
            .mb-3
              label.form-label(for='salesAgent') Sales Agent
              select#salesAgent.form-control(name='salesAgent')
                //- if agents.length
                //-   each agent in agents
                //-     option(value=agent._id) #{agent.username}
              small#salesAgentErr.form-text.text-danger
            .mb-3
              label.form-label(for='dateOfSale') Date of Sale
              input#dateOfSale.form-control(type='date' name='saledate')
              small#dateOfSaleErr.form-text.text-danger
            .text-center
              button.btn.btn-primary(type='submit') Make Sale
