doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Credit Sales Management
    link(rel="stylesheet" href="/css/credit.css")
  body
    .bg-img
      .container
        h1#ab CREDIT SALES
        form#form-container(action="/updateCredit?:id"+sale._id method="post")
          .form-row
            .form-column
              label(for="produceName") Produce Name:
              select#produceName(name="produceName")
                option(value="") Select Produce
                option(value="beans") Beans
                option(value="maize") Maize
                option(value="cowpeas") Cowpeas
                option(value="rice") Rice
                option(value="soybeans") Soybeans
                option(value="gnuts") G-nuts
            .form-column
              label(for="typeOfProduce") Type of Produce:
              select#produceType(name="typeofProduce")
                option(value="") Select Produce Type
                option(value="cereals") Cereals
                option(value="legumes") Legumes
          .form-row
            .form-column
              label(for="storeBranch") Branch:
              select#storeBranch(name="storeBranch")
                option(value="") Select Branch
                option(value="maganjo") Maganjo Store
                option(value="matuga") Matuga Store
            .form-column
              label(for="buyerName") Buyer's Name:
              input(type="text" id="buyerName" name="buyerName")
          .form-row
            .form-column
              label(for="time") Time:
              input(type="time" id="time" name="time")
            .form-column
              label(for="tonnage") Tonnage (kg):
              input(type="number" id="tonnage" name="tonnage")
          .form-row
            .form-column
              label(for="cost") Cost per Kg (UGX):
              input(type="number" id="produceCost" name="produceCost")
            .form-column
              label(for="totalCost") Total Amount:
              input(type="number" id="totalCost" name="totalCost" readonly)
          .form-row
            .form-column
              label(for="amountPaid") Amount Paid (UGX):
              input(type="number" id="amountPaid" name="amountPaid")
            .form-column
              label(for="amountDue") Amount Due (UGX):
              input(type="number" id="amountDue" name="amountDue" readonly)
          .form-row
            .form-column
              label(for="dateOfDispatch") Date of Dispatch:
              input(type="date" id="dateOfDispatch" name="dateOfDispatch")
            .form-column
              label(for="dueDate") Due Date:
              input(type="date" id="dueDate" name="dueDate")
          .form-row
            .form-column
              label(for="location") Buyer Location:
              input(type="text" id="location" name="buyerLocation")
            .form-column
              label(for="contacts") Buyer Contact:
              input(type="tel" id="contacts" name="contacts")
          .form-row
            .form-column
              label(for="nationalID") National ID:
              input(type="text" id="nationalID" name="nationalID")
            .form-column
              label(for="salesAgentName") Sales Agent Name:
              input(type="text" id="salesAgentName" name="salesAgentName")
          .form-row
            button.button(type="submit") Update Credit Sale
    script(src="/js/credit.js")
