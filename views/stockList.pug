doctype html
html
    head
        title Stock List
        link(rel="stylesheet", href="/css/stockList.css")
    body
        .container
            h1.text-center.mt-5.mb-4 Stock List
            table.table.table-striped
                thead
                    tr
                        th(scope="col") Produce Name
                        th(scope="col") Tonnage (Kg)
                        th(scope="col") Produce Cost per Kg (UGX)
                        th(scope="col") Store Branch
                        th(scope="col") Selling Price per Kg (UGX)
                        th(scope="col") Action
                tbody
                    if produces.length
                        each produce in produces
                            tr
                                td #{produce.produceName}
                                td #{produce.tonnage}
                                td #{produce.cost}
                                td #{produce.storeBranch}
                                td #{produce.sellingPrice}
                                td 
                                    form(method="post", action="/#")
                                        input(type="hidden", name="id", value=produce._id)
                                        button.btn.btn-primary.btn-sm(type="submit") Edit
                                    form(method="post", action="/#")
                                        input(type="hidden", name="id", value=produce._id)
                                        button.btn.btn-danger.btn-sm(type="submit") Delete
                    else
                        tr
                            td(colspan="6") No produce yet :
