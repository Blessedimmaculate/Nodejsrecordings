doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Manager's Produce Records
    link(rel="stylesheet", href="/css/stock.css")
  body
    .bg-img
      .container
        h1#ab PROCUREMENT RECORDS
        form#produce-form(action="/addProduce" method="POST")
          .form-row
            .form-group
              label(for="storeBranch") Branch:
              select#storeBranch(name="storeBranch", required)
                option(value="") Select Branch
                option(value="maganjo") Maganjo Store
                option(value="matuga") Matuga Store
            .form-group
              label(for="produceName") Produce Name:
              select#produceName(name="produceName", required)
                option(value="") Select Produce
                option(value="beans") Beans
                option(value="maize") Maize
                option(value="cowpeas") Cowpeas
                option(value="rice") Rice
                option(value="soybeans") Soybeans
                option(value="gnuts") G-nuts
          .form-row
            .form-group
              label(for="produceType") Produce Type:
              select#produceType(name="produceType", required)
                option(value="") Select Produce Type
                option(value="cereals") Cereals
                option(value="legumes") Legumes
            .form-group
              label(for="date") Date:
              input#date(type="date", name="date", required)
          .form-row
            .form-group
              label(for="time") Time:
              input#time(type="time", name="time", required)
            .form-group
              label(for="tonnage") Tonnage (kg):
              input#tonnage(type="number", name="tonnage", required, min="1000")
          .form-row
            .form-group
              label(for="dealerName") If Dealer, Dealer Name:
              input#dealerName(type="text", name="dealerName")
            .form-group
              label(for="companyName") If Company, Company Name:
              input#companyName(type="text", name="companyName")
          .form-row
            .form-group
              label(for="cost") Produce Cost per Kg (UGX):
              input#cost(type="number", name="cost")
            .form-group
              label(for="produceSource") Source of Produce:
              select#produceSource(name="produceSource", required)
                option(value="") Select Produce Source
                option(value="maganjo") Maganjo Farm
                option(value="matuga") Matuga Farm
                option(value="dealer") Dealer
                option(value="othercompany") Other Company
          .form-row
            .form-group
              label(for="branchName") Branch Name:
              select#branchName(name="branchName", required)
                option(value="Maganjo") Maganjo
                option(value="Matugga") Matugga
            .form-group
              label(for="contact") Source Contact:
              input#contact(type="text", name="contact", required)
          .form-row
            .form-group
              label(for="totalCost") Total Produce Cost (UGX):
              input#totalCost(type="number", name="totalcost")
            .form-group
              label(for="sellingPrice") Selling Price per Kg (UGX):
              input#sellingPrice(type="number", name="sellingPrice")
          .form-row
            button.button(type="submit") Add Produce
    script(src="/stock/stock.js")
